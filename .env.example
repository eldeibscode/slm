# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to git - it contains secrets!
# =============================================================================

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=slmdb
MYSQL_USER=slm_user
MYSQL_PASSWORD=your_secure_user_password_here

# JWT Configuration
# Generate with: openssl rand -base64 64
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRATION=86400000

# Application Configuration
APP_UPLOAD_URL_PREFIX=https://salam-ev.de

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://salam-ev.de,http://salam-ev.de,https://www.salam-ev.de,http://www.salam-ev.de
